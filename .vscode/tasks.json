{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "example basic - clang",
			"type": "process",
			"command": "build_clang.bat",
			"args": [
				"example_basic_clang.exe",
				"examples/example_basic.c"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},

		{
			"label": "example suite - clang",
			"type": "process",
			"command": "build_clang.bat",
			"args": [
				"example_suite_clang.exe",
				"examples/example_suite.c examples/sample_suite.c"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},

		{
			"label": "example C++ - clang",
			"type": "process",
			"command": "build_clang.bat",
			"args": [
				"example_cpp_clang.exe",
				"examples/example_cpp.cpp examples/sample_suite_cpp.cpp"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},

		{
			"label": "example basic - gcc",
			"type": "process",
			"command": "build_gcc.bat",
			"args": [
				"example_basic_gcc.exe",
				"examples/example_basic.c"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},

		{
			"label": "example suite - gcc",
			"type": "process",
			"command": "build_gcc.bat",
			"args": [
				"example_suite_gcc.exe",
				"examples/example_suite.c examples/sample_suite.c"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},

		{
			"label": "example C++ - gcc",
			"type": "process",
			"command": "build_gcc.bat",
			"args": [
				"example_cpp_gcc.exe",
				"examples/example_cpp.cpp examples/sample_suite_cpp.cpp"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
	]
}